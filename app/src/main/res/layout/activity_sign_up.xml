<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fire"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="110dp"
        android:layout_height="130dp"
        android:background="@drawable/logo"
        android:layout_marginStart="30dp"

        />


    <TextView
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:gravity="center"
        android:paddingLeft="75dp"
        android:text="Registration"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/register"
        android:fillViewport="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

    <EditText
        android:id="@+id/user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#10F0F0F0"
        android:drawableLeft="@drawable/ic_baseline_people_24"
        android:drawablePadding="5dp"
        android:hint="Username"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="#F0F0F0"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lastname"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#10F0F0F0"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawablePadding="5dp"
        android:padding="10dp"
        android:hint="Email"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:textColorHint="#F0F0F0"
        />

    <EditText
        android:id="@+id/firstname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#10F0F0F0"
        android:drawableLeft="@drawable/ic_baseline_border_color_24"
        android:drawablePadding="5dp"
        android:padding="10dp"
        android:hint="First Name"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:textColorHint="#F0F0F0"
        />

    <EditText
        android:id="@+id/lastname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/firstname"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#10F0F0F0"
        android:drawableLeft="@drawable/ic_baseline_border_color_24"
        android:drawablePadding="5dp"
        android:padding="10dp"
        android:hint="Last Name"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:textColorHint="#F0F0F0"
        />

    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#10F0F0F0"
        android:drawableLeft="@drawable/ic_baseline_phone_24"
        android:drawablePadding="5dp"
        android:padding="10dp"
        android:hint="Phone Number"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:textColorHint="#F0F0F0"
        />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone"
        android:layout_marginStart="10dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#10F0F0F0"
        android:drawableLeft="@drawable/ic_baseline_key_24"
        android:drawablePadding="5dp"
        android:hint="Password"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="#F0F0F0"
        android:textSize="25dp" />
    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#10F0F0F0"
        android:hint="Security Question: What is your dogs name?"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="#F0F0F0"
        android:textSize="18dp"

        />
    <EditText
        android:id="@+id/answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question"
        android:layout_marginStart="10dp"

        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#10F0F0F0"
        android:drawableLeft="@drawable/ic_baseline_create_24"
        android:drawablePadding="5dp"
        android:hint="Answer"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="#F0F0F0"
        android:textSize="25dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/signup"
        android:layout_below="@id/answer"
        android:backgroundTint="#9D2932"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"

        />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>