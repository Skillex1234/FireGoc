<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fire"
    tools:context=".HomeScreen">

    <HorizontalScrollView
        android:id="@+id/horizontalScrollViewFeatured"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_marginTop="12dp"
        android:fillViewport="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFeatured">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">

            <ImageView
                android:id="@+id/imageViewFeatured1"
                android:layout_width="120dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/coke" />

            <TextView
                android:id="@+id/textViewFeaturedOne"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageViewFeatured1"
                android:text="@string/coke"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageViewFeatured2"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_marginLeft="150dp"
                app:srcCompat="@drawable/dino_nuggets" />

            <TextView
                android:id="@+id/textViewFeaturedTwo"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_below="@+id/imageViewFeatured2"
                android:layout_marginLeft="150dp"
                android:text="@string/DinoNuggets"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageViewFeatured3"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_marginLeft="300dp"
                app:srcCompat="@drawable/iced_tea" />

            <TextView
                android:id="@+id/textViewFeaturedThree"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageViewFeatured3"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="-14dp"
                android:text="@string/Arizona"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageViewFeatured4"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_marginLeft="450dp"
                app:srcCompat="@drawable/ketchup" />

            <TextView
                android:id="@+id/textViewFeaturedFour"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageViewFeatured4"
                android:layout_marginLeft="450dp"
                android:layout_marginTop="0dp"
                android:text="@string/ketchup"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

        </RelativeLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/textViewFeatured"
        android:layout_width="402dp"
        android:layout_height="45dp"
        android:layout_marginStart="4dp"
        android:text="@string/featured"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="48dp"
        android:fillViewport="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollViewFeatured">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonCategoryMeats"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="48dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#FF9800"
                android:text="@string/meats" />

            <Button
                android:id="@+id/buttonCategoryDairy"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="48dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#FF9800"
                android:text="@string/dairy" />

            <Button
                android:id="@+id/buttonCategoryFrozen"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="48dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#FF9800"
                android:text="@string/frozen" />

            <Button
                android:id="@+id/buttonCategoryDrinks"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="48dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#FF9800"
                android:text="@string/drinks" />

            <Button
                android:id="@+id/buttonCategoryProduce"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="48dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#FF9800"
                android:text="@string/produce" />

            <Button
                android:id="@+id/buttonCategoryDry"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="48dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#FF9800"
                android:text="@string/dry" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textViewCat"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/categories"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollViewFeatured" />

</androidx.constraintlayout.widget.ConstraintLayout>