<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Forgotpassword"
    android:background="@drawable/fire"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/logo"
        android:src="@drawable/email"
        />
    
    <TextView
        android:id="@+id/instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:text="Enter the email associated with the your account and we will send you an email with instructions to reset your password."
        android:textAlignment="center"
        android:textColor="#F0F0F0"
        android:textSize="15dp"
        />

    <EditText
        android:id="@+id/emailtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/instructions"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Email"
        android:textColorHint="#F0F0F0"
        android:background="#10F0F0F0"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawablePadding="5dp"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="25dp"
        />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/submit"
        android:layout_below="@id/emailtext"
        android:backgroundTint="#9D2932"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:text="Submit"
        android:textAllCaps="false"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        />

    







</RelativeLayout>